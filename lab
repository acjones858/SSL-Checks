#!/bin/bash

# Read websites from a text file (one website per line)
websites="ssl.txt"

# Define color codes for formatting
LIGHT_BLUE='\033[1;34m'
LIGHT_GREEN='\033[1;32m'
LIGHT_YELLOW='\033[1;33m'
LIGHT_RED='\033[1;31m'
NC='\033[0m' # No color

# Loop through the websites and check SSL certificate grade
while IFS= read -r website; do
  echo -e "${LIGHT_BLUE}Checking SSL certificate for $website...${NC}"

  # Call the SSL Labs API and retrieve the grade
  api_response=$(curl -s "https://api.ssllabs.com/api/v3/analyze?host=$website")
  grade=$(echo "$api_response" | jq -r '.endpoints[0].grade')

  # Print the grade with color or error message
  if [[ "$grade" == "null" ]]; then
    echo -e "${LIGHT_RED}Error: SSL Labs grade not available for $website${NC}"
  else
    echo -e "Certificate grade for $website: \
      $(if [[ "$grade" == "A" ]]; then echo -e "${LIGHT_GREEN}$grade${NC}";
      elif [[ "$grade" == "B" ]]; then echo -e "${LIGHT_YELLOW}$grade${NC}";
      elif [[ "$grade" == "C" ]]; then echo -e "${LIGHT_RED}$grade${NC}";
      else echo "$grade";
      fi)"
  fi

  echo
done < "$websites"
